<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about2"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameWrapper1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mainHintTextSize="24sp"
        android:hint="Name"
        app:layout_constraintVertical_bias="0.128"
        tools:ignore="MissingClass">
        <EditText
            android:id="@+id/textName"
            android:layout_width="281dp"
            android:layout_height="85dp"
            android:background="@drawable/mytext"
            android:fontFamily="serif-monospace"
            android:gravity="center"

            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.356" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameWrapper4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.737"

        app:mainHintTextSize="12sp"
        android:hint="Branch"
        tools:ignore="MissingClass">
        <EditText
            android:id="@+id/textBranch"
            android:layout_width="281dp"
            android:layout_height="85dp"
            android:background="@drawable/mytext"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:hint="Branch"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.356" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameWrapper3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54"
        app:passwordToggleEnabled="true"
        app:mainHintTextSize="12sp"
        android:hint="Cpga"
        tools:ignore="MissingClass">
        <EditText
            android:id="@+id/textCgpa"
            android:layout_width="281dp"
            android:layout_height="85dp"
            android:background="@drawable/mytext"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:hint="Cgpa"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.356" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameWrapper2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336"
        app:passwordToggleEnabled="true"
        app:mainHintTextSize="12sp"
        android:hint="Reg"
        tools:ignore="MissingClass">
        <EditText
            android:id="@+id/textReg"
            android:layout_width="281dp"
            android:layout_height="85dp"
            android:background="@drawable/mytext"
            android:fontFamily="serif-monospace"
            android:inputType="number"
            android:gravity="center"
            android:hint="Reg"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.356" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="208dp"
        android:layout_height="75dp"
        android:id="@+id/save"
        android:textSize="40dp"
        android:text="log"
        android:gravity="center"
        android:background="@drawable/mytext"
        android:textAlignment="center"
        android:textColor="#fff"
        android:fontFamily="serif-monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>